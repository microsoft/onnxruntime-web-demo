{
  "compileOnSave": true,
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules", 
    "src/common"
  ],
  "compilerOptions": {
    // "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": [
      "es2016", 
      "dom", 
      "esnext",
      "dom.iterable",
      "scripthost", 
    ],
    "declarationDir": "./types",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noUnusedParameters": false,
    "pretty": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
